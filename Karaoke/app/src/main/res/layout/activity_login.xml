<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.musicapp.MainActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/laun_en"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:background="@drawable/laun_chi"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button2"
        android:background="@drawable/laun_bm" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:background="@drawable/avatar"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true" />



    <LinearLayout
        android:layout_below="@+id/imageView1"
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <Button
            android:id="@+id/button4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/user"
            />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:hint="Person Name">


        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear_layout"
        android:id="@+id/linear_lay_out"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/button5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/password"
            />

        <EditText
            android:id="@+id/editText2"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="Password" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_one"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/linear_lay_out" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_marginLeft="150dp"
            android:singleLine="true"
            android:text="Forgot Password?"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_two"
        android:layout_below="@+id/linear_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1">

        <Button

            android:id="@+id/button6"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:text="Login"

            android:background="#000000"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_weight="0.29" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_three"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/linear_two"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_marginLeft="100dp"

            android:layout_width="34dp"
            android:layout_height="34dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"

            android:text="remember me"
            android:textAlignment="center"
            android:textColor="#ffffff" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_four"
        android:layout_below="@+id/linear_three"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/fblogin"
            android:textAlignment="center" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="bottom"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/llmenu"
        android:weightSum="1"
        android:background="#ff910c"
        >

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/booking"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.25"

            android:layout_marginLeft="5dp" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/news"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.25"
            android:layout_marginLeft="15dp" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/roomkey"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.25"
            android:layout_marginLeft="15dp" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/user"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25" />




    </LinearLayout>


</RelativeLayout>

