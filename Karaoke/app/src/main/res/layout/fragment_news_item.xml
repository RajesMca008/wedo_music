<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_newsimage"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@drawable/img1"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"  android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_of_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ec0f0e06"
                android:text="There was no hurry in transferring Maria."/>
            <TextView
                android:id="@+id/tv_newstitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#828282"
                android:text="It would have been inappropriate to transfer him on September 30, in the middle of the festive season as Ganapati festival,\n a very important event in Maharashtra would be on at that time. "/>
        </LinearLayout>
    </LinearLayout>
 <ImageView
     android:layout_width="35dp"
     android:layout_below="@id/main_layout"
     android:layout_height="35dp"   android:layout_alignParentRight="true" android:src="@drawable/like" />
</RelativeLayout>
